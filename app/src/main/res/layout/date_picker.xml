<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/last3Months"
                android:layout_width="205dp"
                android:layout_height="66dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayLsatThreeMonthsResult"
                android:padding="15dp"
                android:text="Last 3 months" />

            <Button
                android:id="@+id/thisWeek"
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayThisWeekResult"
                android:padding="15dp"
                android:text="This Week" />

            <Button
                android:id="@+id/pickDateFrom"
                android:layout_width="133dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="datePicker"
                android:padding="15dp"
                android:text="From" />

            <Button
                android:id="@+id/lastMonth"
                android:layout_width="206dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayLastMonthResult"
                android:padding="15dp"
                android:text="Last Month" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Select Date Range"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="127dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Range"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/showDateTo"
                android:layout_width="292dp"
                android:layout_height="47dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textSize="23dp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="227dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="finish"
                android:text="@string/cancel_button"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pickDateTo"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:padding="15dp"
                android:text="TO" />

            <Button
                android:id="@+id/today"
                android:layout_width="207dp"
                android:layout_height="57dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayTodayResult"
                android:padding="15dp"
                android:text="Today" />

            <Button
                android:id="@+id/done"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayRange"
                android:padding="15dp"
                android:text="Go" />

            <Button
                android:id="@+id/all"
                android:layout_width="210dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:onClick="displayAll"
                android:padding="15dp"
                android:text="All" />

            <TextView
                android:id="@+id/showDateFrom"
                android:layout_width="298dp"
                android:layout_height="51dp"
                android:layout_below="@+id/pickDateFrom"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="23dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>